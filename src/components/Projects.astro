---
import React from '../icons/React.astro'
import Tailwind from '../icons/Tailwind.astro'
const TAGS = {
    REACT:{
        name: 'React',
        class: 'bg-black text-white',
        icon: React,
        
        
    },
    TAILWIND:{
        name: 'Tailwind CSS',
        class: 'bg-white text-[#73bcf6]',
        icon: Tailwind,
    }
}
const PROJECTS = [
    {
        title:'CineSafari - Watch all your favourite movies online',
        description: 'TENGO QUE CAMBIARLE EL TITLE Y DESCRIPTINO EN EL CODIGO A LOS PROYECTOS',
        link:'https://cine-safari.vercel.app/',
        github: 'https://github.com/JoaquinxHerrera/CineSafari.git',
        image: '/projects/cinesafari1.webp',
        tags: [TAGS.REACT, TAGS.TAILWIND, ]
    }
]
---

{PROJECTS.map(({title, description, tags, image}) =>(
    <article>
    <h3 class="text-2xl font-semibold text-yellow-100 mb-2">{title}</h3>
    <p class="text-lg mb-4 text-pretty">{description}</p>
    <ul class="flex flex-row gap-x-4 mb-4">
        {tags.map((tag) =>(
            <li>
                <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                    <tag.icon class="size-4"/>
                    {tag.name}
                </span>
            </li>
        ))}
    </ul>
    <img 
        class="rounded shadow-2xl shadow-white/10"
        src={image} 
        alt={`Screenshot of the project ${title}`}>
    </article>
))}